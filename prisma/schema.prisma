datasource db {
  provider = "sqlite"
  url      = env("DB_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["strictUndefinedChecks", "typedSql"]
}

model Emoji {
  id         String       @id
  name       String
  createdOn  DateTime
  deletedOn  DateTime?
  guildId    String
  EmojiUsage EmojiUsage[]
}

model EmojiUsage {
  messageId String
  userId    String
  emojiId   String
  channelId String
  date      DateTime @default(now())
  emoji     Emoji    @relation(fields: [emojiId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId, emojiId])
  @@index([emojiId, date])
  @@index([channelId, emojiId, date])
}

